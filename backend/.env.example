# LaunchLine Starter - Backend Environment Configuration
# Copy this file to .env and update values as needed

# Django Configuration
SECRET_KEY=django-insecure-change-me-in-production-your-secret-key-here
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/launchline_starter_dev
# Alternative individual settings:
# DATABASE_NAME=launchline_starter_dev
# DATABASE_USER=postgres
# DATABASE_PASSWORD=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# Email Configuration
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@launchline.io
LEAD_NOTIFICATION_EMAIL=admin@launchline.io

# Wagtail Configuration
WAGTAILADMIN_BASE_URL=http://localhost:8000

# Cache Configuration (optional)
CACHE_URL=redis://localhost:6379/0

# Logging
DJANGO_LOG_LEVEL=INFO

# Security Settings (Production)
# Uncomment and configure for production:
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# External Services (optional)
SENTRY_DSN=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1